groups:
- name: node:node_cpu_utilisation
  rules:
  - record: instance:node_cpu_utilisation:avg1m
    expr: avg by (instance) (rate(node_cpu_seconds_total{job="node-exporter",mode="idle"}[1m]))
- name: test
  rules:
  - alert: TestAlert
    annotations:
      message: "This is a test alert."
    expr: vector(1)
    labels:
      severity: none
  - alert: TestAlert2
    annotations:
      message: "This is a test alert. (2)"
    expr: vector(1)
    labels:
      severity: none
